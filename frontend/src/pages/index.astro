---
import Layout from '../layouts/Layout.astro';
import '../styles/tailwind.css';
---

<Layout>
  <div class='p-8 grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3'>
    <div
      class='rounded-2xl shadow-md p-6 bg-white border border-gray-200 hover:shadow-lg transition'
    >
      <h2 class='text-lg font-semibold text-gray-800 mb-2'>Active Projects</h2>
      <p class='text-4xl font-bold text-blue-600'>12</p>
    </div>

    <div
      class='rounded-2xl shadow-md p-6 bg-white border border-gray-200 hover:shadow-lg transition'
    >
      <h2 class='text-lg font-semibold text-gray-800 mb-2'>Invoices Due</h2>
      <p class='text-4xl font-bold text-red-500'>$4,750</p>
    </div>

    <div
      class='rounded-2xl shadow-md p-6 bg-white border border-gray-200 hover:shadow-lg transition'
    >
      <h2 class='text-lg font-semibold text-gray-800 mb-2'>Upcoming Tasks</h2>
      <p class='text-4xl font-bold text-green-600'>7</p>
    </div>
  </div>
</Layout>
